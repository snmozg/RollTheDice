<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:textAlignment="textStart"
    >

    <Button
        android:id="@+id/SingleButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="267dp"
        android:layout_height="63dp"
        android:background="#FF5368"
        android:nestedScrollingEnabled="true"
        android:text="Single Dice"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/DoubleButton"
        app:layout_constraintEnd_toEndOf="@+id/DoubleButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/DoubleButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <Button
        android:id="@+id/DoubleButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="272dp"
        android:layout_height="62dp"
        android:layout_marginBottom="192dp"
        android:background="#FF5368"
        android:nestedScrollingEnabled="true"
        android:text="Double Dice"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="181dp"
        android:layout_height="172dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/dices"
        app:layout_constraintBottom_toTopOf="@+id/SingleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>
